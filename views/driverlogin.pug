extends layout/main-layout.pug

block style
    link(rel="stylesheet", type="text/css", href="/css/logindriver.css")

block content
    .login-wrap
        .login-html
            input.sign-in(id="tab-1", type="radio", name="tab", class="sign-in" checked)
            label.tab(for="tab-1") Sign In
            input.sign-up(id="tab-2", type="radio", name="tab")
            label.tab(for="tab-2") Sign Up
            .login-form
                .sign-in-htm
                    .group
                        label.label(for="user") Trucker Driver name
                        input.input(id="user", type="text")
                    .group
                        label.label(for="pass") Password
                        input.input(id="pass" ,type="password",  data-type="password")
                    .group
                        input.check(id="check", type="checkbox", checked)
                        label(for="check") Keep me Signed in
                        span.icon  
                    .group
                        input.button(type="submit",  value="Sign In")
                    .hr
                    .foot-lnk
                        a(href="#forgot") Forgot Password?
                .sign-up-htm
                    .group
                        label.label(for="user") Username
                        input.input(id="user", type="text")
                    .group
                        label.label(for="pass" ) Password
                        input.input(id="pass" ,type="password" , data-type="password")
                    .group
                        label.label(for="pass") Repeat Password
                        input.input(id="pass", type="password",  data-type="password")
                    .group
                        label.label(for="pass") Mobile number 
                        input.input(id="pass", type="text")
                    .group
                        input.button(type="submit", value="Sign Up")
                    .hr
                    .foot-lnk
                        label(for="tab-1") Already Member?
    